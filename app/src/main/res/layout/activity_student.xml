<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context=".StudentActivity"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#2196F3"
        android:elevation="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="CR Helper"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:id="@+id/title"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Welcome Student"

            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:id="@+id/subTitle" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/att_icon"

            android:layout_marginStart="30dp"
            android:src="@drawable/attendance" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Attendance"

            android:layout_marginStart="35dp"
            android:layout_marginTop="30dp"
            android:id="@+id/att_text"

            android:textSize="30sp"
            android:textColor="#607D8B"
            android:onClick="@string/title_activity_attendance" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:id="@+id/syll_icon"

            android:layout_marginStart="40dp"
            android:src="@drawable/syllabus" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Syllabus"

            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:id="@+id/sull_text"

            android:textSize="30sp"
            android:textColor="#607D8B"
            android:onClick="@string/title_activity_syllabus" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/assign_icon"

            android:layout_marginStart="40dp"
            android:src="@drawable/tasks" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Assignments"

            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:id="@+id/assign_text"

            android:textSize="30sp"
            android:textColor="#607D8B"
            android:onClick="@string/title_activity_assignment" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/other_icon"

            android:layout_marginStart="40dp"
            android:src="@drawable/profile" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Other Info."

            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:id="@+id/other_text"

            android:textSize="30sp"
            android:textColor="#607D8B" />
    </LinearLayout>


</LinearLayout>
